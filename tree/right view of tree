class Solution {
public:
    vector<int> help(TreeNode* root,int level,vector<int>& ans){
        if(root==NULL) return ans;
        if(ans.size()==level){
            ans.push_back(root->val);
        }
        help(root->right,level+1,ans);
        help(root->left,level+1,ans);
        return ans; 
    }
    vector<int> rightSideView(TreeNode* root) {
        vector<int> ans;
        help(root,0,ans);
        return ans; 
    }
};
