int vowels = 0, consonants = 0, spaces = 0;

    for (int i = 0; i < n; i++) {
        char ch = s[i];

        if (ch == ' ') {
            spaces++;
        } else if (isalpha(static_cast<unsigned char>(ch))) {
            char c = tolower(static_cast<unsigned char>(ch));
            if (c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u')
                vowels++;
            else
                consonants++;
        }
    }

    return {vowels, consonants, spaces};
